# .env.example
# Copy this file to .env and fill in your actual values

# Django Settings
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database (PostgreSQL for production)
# DB_NAME=wopbic_db
# DB_USER=wopbic_user
# DB_PASSWORD=your-database-password
# DB_HOST=localhost
# DB_PORT=5432

# Email Configuration (Gmail example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@wopbic.org

# Church Email Addresses
CHURCH_EMAIL=info@wopbic.org
PASTOR_EMAIL=pastor@wopbic.org

# Google Maps API Key (for location map)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Church Location Coordinates
CHURCH_LATITUDE=6.5244
CHURCH_LONGITUDE=3.3792

# Security (Production only)
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True